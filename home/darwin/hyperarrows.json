{
  "title": "CapsLock to Esc/Hyper, Hyper + JKL; keys to arrows",
  "rules": [
    {
      "description": "CapsLock to Hyper/Escape",
      "manipulators": [
        {
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "right_shift",
              "modifiers": ["right_command", "right_control", "right_option"]
            }
          ],
          "to_if_alone": [
            {
              "key_code": "escape"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Hyper + JKL; keys to arrows",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": [
                "right_command",
                "right_control",
                "right_alt",
                "right_shift"
              ]
            },
            "key_code": "j"
          },
          "to": [{ "repeat": true, "key_code": "left_arrow" }]
        },
        {
          "from": {
            "key_code": "k",
            "modifiers": {
              "mandatory": [
                "right_gui",
                "right_control",
                "right_alt",
                "right_shift"
              ]
            }
          },
          "to": [
            {
              "key_code": "down_arrow",
              "repeat": true
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "l",
            "modifiers": {
              "mandatory": [
                "right_gui",
                "right_control",
                "right_alt",
                "right_shift"
              ]
            }
          },
          "to": [
            {
              "key_code": "up_arrow",
              "repeat": true
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "semicolon",
            "modifiers": {
              "mandatory": [
                "right_gui",
                "right_control",
                "right_alt",
                "right_shift"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_arrow",
              "repeat": true
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
